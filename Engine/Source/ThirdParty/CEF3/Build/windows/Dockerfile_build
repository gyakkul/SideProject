# CEF3 is built by using the Dockerfile_base command
FROM cef3 
ARG CEF_BRANCH
ENV CEF_BRANCH=${CEF_BRANCH:-4577}
ARG GN_DEFINES
ENV GN_DEFINES=${GN_DEFINES:-"is_component_build=false enable_precompiled_headers=false is_official_build=true"}

RUN mkdir c:\temp\code\patches
COPY patches/ c:/temp/code/patches
COPY cef_build.bat c:/temp/code

CMD cd c:\code &&  echo Now run "cef_build.bat" to build CEF && cmd.exe

